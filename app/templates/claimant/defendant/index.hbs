<h2 id="title">Welcome to the Defendant Page!</h2>

 {{#if responseMessage}}
      <div class="alert alert-success">{{responseMessage}}</div>
    {{/if}}

<form>
    <div class="form-group">
      <label for="first_name">First Name</label>
      {{input id="first_name" class="form-control" value=first_name}}
    </div>
    
    <div class="form-group">
      <label for="middle_initial">Middle Initial</label>
      {{textarea id="middle_initial" class="form-control" rows="15" value=middle_initial}}
    </div>

    <div class="form-group">
      <label for="last_name">Last Name</label>
      {{textarea id="last_name" class="form-control" rows="15" value=last_name}}
    </div>

    <div class="form-group">
      <label for="address">Address</label>
      {{textarea id="address" class="form-control" rows="15" value=address}}
    </div>

    <div class="form-group">
      <label for="city">City</label>
      {{textarea id="city" class="form-control" rows="15" value=city}}
    </div>

    <div class="form-group">
      <label for="state">State</label>
      {{textarea id="state" class="form-control" rows="15" value=state}}
    </div>

    <div class="form-group">
      <label for="zip_code">Zip Code</label>
      {{textarea id="zip_code" class="form-control" rows="15" value=zip_code}}
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      {{textarea id="email" class="form-control" rows="15" value=email}}
    </div>

    <div class="form-group">
      <label for="phone">Phone Number</label>
      {{textarea id="phone" class="form-control" rows="15" value=phone}}
    </div>

    <div class="form-group">
      <label for="other_information">Other Information</label>
      {{textarea id="other_information" class="form-control" rows="15" value=other_information}}
    </div>
    
    <button class="btn btn-primary" {{action 'next'}}>Save</button>
</form>